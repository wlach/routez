#!/bin/sh

export LD_LIBRARY_PATH="${buildout:directory}/develop-eggs/rtree:${libroutez:location}/lib:${neocoder:location}/lib"
export DYLD_LIBRARY_PATH="${buildout:directory}/develop-eggs/rtree:${libroutez:location}/lib:${neocoder:location}/lib"

OSM_FILE=${geodata:osm_file}

if [ $OSM_FILE ]; then
    exec ${buildout:directory}/bin/python \
	${libroutez:path}/utils/creategraph.py \
	${geodata:gtfs_file} \
	${development:var-directory}/mygraph.routez \
	${development:parts-directory}/mygraph.gtfsmapping \
	--osm=$OSM_FILE
else
    exec ${buildout:directory}/bin/python \
	${libroutez:path}/utils/creategraph.py \
	${geodata:gtfs_file} \
	${development:var-directory}/mygraph.routez \
	${development:parts-directory}/mygraph.gtfsmapping
fi
