# Local settings for routez project.

# Cloudmade Maps and Google Analytics API keys

CMAPS_API_KEY = '${routez_settings:cmaps_api_key}'
ANALYTICS_KEY = '${routez_settings:analytics_key}'

# Cloudmade style

CMAPS_STYLE_ID = '${routez_settings:cmaps_style_id}'

# The file containing the transit graph, generated by creategraph.py
GRAPH_FILE = '${development:var-directory}/mygraph.routez'

# The file containing geocoder database, generated by creategeodb.py
USE_LOCAL_GEOCODER = ${routez_settings:use_local_geocoder}
GEOCODER_FILE = '${development:var-directory}/mygeocoder.db'

DATABASE_ENGINE = 'sqlite3'    # 'postgresql_psycopg2', 'postgresql', 'mysql', 'sqlite3' or 'oracle'.
DATABASE_NAME = '${development:var-directory}/routez.db' # Or path to database file if using sqlite3.
DATABASE_USER = ''             # Not used with sqlite3.
DATABASE_PASSWORD = ''         # Not used with sqlite3.
DATABASE_HOST = ''             # Set to empty string for localhost. Not used with sqlite3.
DATABASE_PORT = ''             # Set to empty string for default. Not used with sqlite3.
